    <%= f.label :color %><br>
    <%= f.text_field :color, :class => "adas", :style => "ds" %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :seen_at %><br>
    <%= f.datetime_select :seen_at %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
